# BookSmartly Production Environment Variables Example
# Copy this file to .env.production and fill in real values for deployment.
# NEVER commit real secrets or keys to the repository.

# Database connection (update for production)
DATABASE_URL=postgresql://username:password@PRODUCTION_HOST:5432/booksmartly

# API key for external services
API_KEY=YOUR_API_KEY

# Port for the application
PORT=3000

# Square credentials (production only)
SQUARE_ENVIRONMENT=production
SQUARE_ACCESS_TOKEN=YOUR_SQUARE_ACCESS_TOKEN
SQUARE_LOCATION_ID=YOUR_SQUARE_LOCATION_ID

# Clerk authentication (see Hostinger_Migration_Guide for setup)
VITE_CLERK_PUBLISHABLE_KEY=YOUR_CLERK_PUBLISHABLE_KEY
CLERK_SECRET_KEY=YOUR_CLERK_SECRET_KEY

# API URL for production backend (update as needed)
VITE_API_URL=https://api.booksmartly.yourdomain.com

# Fine.dev endpoint (production)
VITE_FINE_ENDPOINT=https://platform.fine.dev/your-production-endpoint